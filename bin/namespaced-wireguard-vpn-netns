#!/usr/bin/env bash

die() {
    echo "${BASH_SOURCE[1]}: line ${BASH_LINENO[0]}: ${FUNCNAME[1]}: ${1:-Died}" >&2
    exit 1
}

case "$1" in
    up)
        for name in $NETNS_NAME
        do
            ip netns add $name || die

            ip -n $name link set lo up || die
            last=$name
        done
        ;;

    down)
        for name in $NETNS_NAME
        do
            ip netns delete $name || die
        done
        ;;
esac

